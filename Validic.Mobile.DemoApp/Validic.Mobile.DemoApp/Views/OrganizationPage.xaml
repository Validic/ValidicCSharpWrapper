<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Validic.Mobile.DemoApp.Views.OrganizationPage">
  <Label Text="{Binding MainText}" VerticalOptions="Center" HorizontalOptions="Center" />
  <ContentPage.ToolbarItems>
    <ToolbarItem x:Name="ToolbarItemOk" Text="OK"></ToolbarItem>
    <ToolbarItem x:Name="ToolbarItemCancel" Text="Cancel"></ToolbarItem>
  </ContentPage.ToolbarItems>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="5"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>
        <Label Grid.Row="1" Grid.Column="1" Text="ID"/>
        <Editor Grid.Row="2" Grid.Column="1" Text="{Binding OrganizationId }" />
        <Label Grid.Row="3" Grid.Column="1" Text="Token"/>
        <Editor x:Name="EditorToken" Grid.Row="4" Grid.Column="1" Text="{Binding AccessToken}"/>
    </Grid>
</ContentPage>